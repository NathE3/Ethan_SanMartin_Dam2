<Window
    x:Class="LoginRegister.View.AddDicatadorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LoginRegister.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:LoginRegister.ViewModel" 
    d:DataContext="{d:DesignInstance Type=viewmodels:AddDicatadorViewModel}"
    mc:Ignorable="d"
    Background="Black" Height="450" Width="400"
    Title="Añadir Dictador">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="446" Width="400">

        <!-- Definir las filas del grid para distribuir los elementos -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- Nueva fila para id_autor -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <ui:TextBlock 
            Text="Añadir Dicatador" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Foreground="White"
            HorizontalAlignment="Center" 
            Margin="0,20,0,20" 
            Grid.Row="0"/>

        <!-- Campo Nombre -->
        <ui:TextBlock 
            Text="Nombre Dicatador"
            Foreground="White"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="135,0,0,0"
            FontSize="14" 
            IsHitTestVisible="False"
            Grid.Row="1"/>
        <ui:TextBox 
            Background="White" 
            Margin="44,5,60,5" 
            Text="{Binding Name, Mode=TwoWay}"
            BorderBrush="#4A90E2" BorderThickness="1" Padding="10,5" FontSize="14"
            Grid.Row="2">
            <ui:TextBox.Effect>
                <DropShadowEffect Color="Black" Direction="270" BlurRadius="5" ShadowDepth="2"/>
            </ui:TextBox.Effect>
        </ui:TextBox>

        <!-- Campo Descripción -->
        <ui:TextBlock 
            Text="Descripción"
            Foreground="White"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="150,0,0,0"
            FontSize="14" 
            IsHitTestVisible="False"
            Grid.Row="3"/>
        <ui:TextBox 
            Background="White" 
            Margin="44,4,60,6" 
            Text="{Binding Description, Mode=TwoWay}"
            BorderBrush="#4A90E2" BorderThickness="1" Padding="10,5" FontSize="14"
            Grid.Row="4">
            <ui:TextBox.Effect>
                <DropShadowEffect Color="Black" Direction="270" BlurRadius="5" ShadowDepth="2"/>
            </ui:TextBox.Effect>
        </ui:TextBox>

        <!-- Campo País -->
        <ui:TextBlock 
            Text="País"
            Foreground="White"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="176,40,0,0"
            FontSize="14" 
            IsHitTestVisible="False"
            Grid.Row="4" Grid.RowSpan="2"/>
        <ui:TextBox 
            Background="White" 
            Margin="44,18,60,116" 
            Text="{Binding Pais, Mode=TwoWay}"
            BorderBrush="#4A90E2" BorderThickness="1" Padding="10,5" FontSize="14"
            Grid.Row="5">
            <ui:TextBox.Effect>
                <DropShadowEffect Color="Black" Direction="270" BlurRadius="5" ShadowDepth="2"/>
            </ui:TextBox.Effect>
        </ui:TextBox>

        <!-- Campo Id Autor (nuevo campo) -->
        <ui:TextBlock 
            Text="ID Autor"
            Foreground="White"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="158,54,0,0"
            FontSize="14" 
            IsHitTestVisible="False"
            Grid.Row="5" Height="19" Width="56"/>
        <ui:TextBox 
            Background="White" 
            Margin="43,78,60,57" 
            Text="{Binding IdAutor, Mode=TwoWay}"
            BorderBrush="#4A90E2" BorderThickness="1" Padding="10,5" FontSize="14"
            Grid.Row="5">
            <ui:TextBox.Effect>
                <DropShadowEffect Color="Black" Direction="270" BlurRadius="5" ShadowDepth="2"/>
            </ui:TextBox.Effect>
        </ui:TextBox>

        <!-- Botón de Añadir Dictador, ubicado en su propia fila -->
        <ui:Button 
            Command="{Binding AddCommand, Mode=OneWay}"
            Content="Añadir Dictador"
            Icon="{ui:SymbolIcon Symbol=Add20}"
            Background="Black" 
            Foreground="White"
            Width="180" 
            Height="24" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Grid.Row="6" 
            Margin="102,0,0,0"
            CornerRadius="25"
            FontSize="16">
            <ui:Button.Effect>
                <DropShadowEffect Color="Black" Direction="270" BlurRadius="10" ShadowDepth="4"/>
            </ui:Button.Effect>
        </ui:Button>

    </Grid>
</Window>





<UserControl
    x:Class="LoginRegister.View.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LoginRegister.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:LoginRegister.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="42" VerticalAlignment="Top" RenderTransformOrigin="0.502,0.458">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:Button
            Grid.Column="0"
            Command="{Binding ViewModel.CounterIncrementCommand, Mode=OneWay}"
            Content="Dicatador add"
            Icon="{ui:SymbolIcon Fluent24}" Margin="538,-16,38,0" VerticalAlignment="Top" Height="40" />

        <ui:DataGrid
            Grid.Row="1" 
            x:Name="MyDataGrid"       
            ItemsSource="{Binding ViewModel.Dicatadores}" 
            AutoGenerateColumns="True" 
            Margin="10" 
            CanUserResizeColumns="True"
            CanUserResizeRows="False"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            MinRowHeight="25"
            MaxHeight="400" 
            ColumnWidth="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
